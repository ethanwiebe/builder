{
	"outputName": "a.out",
	"sourceDir": "src",
	"outputDir": "bin",
	"compileCommand": "g++ -c", 
	"linkCommand": "g++", 
	"defaultMode": "debug", 
	
	"compileFlags": [
		"%input",
		"-stdc++20",
		"-o",
		"%output",
		"-Wall"
	],

	"linkFlags": [
		"%input",
		"-o",
		"%output"
	],

	"modes": {
		"debug": {
			"objectDir": "build/debug",
			"compileFlags": [
				"-g",
				"-Og"
			]
		},
		"release": {
			"objectDir": "build/release",
			"compileFlags": [
				"-O3",
				"-NDEBUG"
			],
			"linkFlags": [
				"-s"
			]
		}
	}
}
